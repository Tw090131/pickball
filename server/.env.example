# 服务器配?
PORT=3000
NODE_ENV=development

# 数据库配?
# MongoDB 连接字符?
# 本地开? mongodb://localhost:27017/pickball
# 云数据库: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/pickball

# JWT 密钥（用于生成和验证 token?
# 生产环境请使用强随机字符串，建议至少 32 ?
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_in_production

# 微信小程序配?
# 在微信公众平台获?
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# 微信支付配置（可选，如果不需要支付功能可以不配置?
# 商户?
WECHAT_MCHID=your_merchant_id
# 商户密钥
WECHAT_KEY=your_merchant_key
# 支付回调地址（必须是 HTTPS?
WECHAT_NOTIFY_URL=https://your-domain.com/api/payment/notify

# 文件上传配置（可选）
# 上传文件保存路径
UPLOAD_PATH=./uploads
# 最大文件大小（字节），默认 5MB
MAX_FILE_SIZE=5242880

# API 基础地址（可选）
# 用于生成完整?URL
API_BASE_URL=http://localhost:3000/api

