/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: #4CAF50;
  color: white;
}

.tag-warning {
  background-color: #FF9800;
  color: white;
}

.tag-danger {
  background-color: #F44336;
  color: white;
}

.tag-info {
  background-color: #2196F3;
  color: white;
}

.tag-default {
  background-color: #9E9E9E;
  color: white;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 选择器样式 */
.picker-group {
  margin-bottom: 30rpx;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
}

