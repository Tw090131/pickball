/* pages/game-types/game-types.wxss */
.category-tabs {
  display: flex;
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
  overflow-x: scroll;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
}

.tab-item.active {
  background-color: #4CAF50;
  color: white;
}

.game-list {
  padding-bottom: 20rpx;
}

.game-card {
  margin-bottom: 20rpx;
}

.game-header {
  margin-bottom: 20rpx;
}

.game-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.game-tags {
  display: flex;
  gap: 10rpx;
}

.tag-hot {
  background-color: #F44336;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.tag-new {
  background-color: #2196F3;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.game-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.game-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  margin-right: 10rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.game-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.create-btn {
  padding: 15rpx 40rpx;
  font-size: 28rpx;
}

.action-links {
  display: flex;
  gap: 20rpx;
}

.link-text {
  font-size: 26rpx;
  color: #4CAF50;
  text-decoration: underline;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 16rpx;
  width: 85%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.rule-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

